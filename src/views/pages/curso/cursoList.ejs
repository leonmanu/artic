<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/header') %> 
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- SweetAlert2 para mensajes -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
</head>
<body>
    <%- include('../../partials/spinner') %> 
    <%- include('../../partials/navbar') %> 

    <!-- Contenido Principal -->
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="text-primary">Vacantes por curso</h3>
            <a href="curso/showForm" class="btn btn-success" role="button" aria-pressed="true">Agregar</a>
        </div>
        <table class="table table-striped table-hover">
            <thead class="table-primary text-center">
                <tr>
                    <th>Curso</th>
                    <th>orientacion</th>
                    <th>turno</th>
                    <th>Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
                <% cursos.forEach(curso => { %>
                    <tr>
                        <td class="text-center"><%= curso.clave %></td>
                        <td class="text-center"><%= curso.orientacion %></td>
                        <td class="text-center"><%= curso.turno %></td>
                        <td class="text-center">
                            <a href="curso/showForm/<%= curso.clave %>" class="btn btn-primary mb-0" role="button" aria-pressed="true">Acceder</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <%- include('../../partials/footer') %> 
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>